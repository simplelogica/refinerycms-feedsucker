<% content_for :body_content_title do %>
  <%= @feed.title %>
<% end %>

<% content_for :body_content_left do %>

  <section>
    <h1>Title</h1>
<p>    <%=raw @feed.title %>
</p>
  </section>

  <section>
    <h1>Nicetitle</h1>
<p>    <%=raw @feed.nicetitle %>
</p>
  </section>

  <section>
    <h1>Url</h1>
<p>    <%=raw @feed.url %>
</p>
  </section>

<% end %>

<% content_for :body_content_right do %>
<aside>
  <h2><%= t('.other') %></h2>
  <ul id="feeds">
    <% @feeds.each do |feed| %>
      <li>
        <%= link_to feed.title, refinery.feedsucker_feed_url(feed) %>
      </li>
    <% end %>
  </ul>
</aside>
<% end %>

<%= render :partial => "/refinery/content_page" %>
