<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'shared.admin.search', :query => params[:search]) %></h2>
  <% end %>
  <% if @feeds.any? %>
    <%= will_paginate @feeds %>

    <%= render :partial => "sortable_list" %>

    <%= will_paginate @feeds %>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% else %>
        <%= t('no_results', :scope => 'shared.admin.search') %>
      <% end %>
    </p>
  <% end %>
</div>
<div id='actions'>
  <ul>
    <li>
      <%= link_to t('.create_new'), refinery.new_feedsucker_admin_feed_path,
                   :class => "add_icon" %>
    </li>
  </ul>
</div>